<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">
                <CalendarView
                    android:layout_width="match_parent"
                    android:id="@+id/calenderView"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:minWidth="150dp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_17sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Money Made"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:minWidth="150dp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_12sdp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:layout_marginHorizontal="@dimen/_3sdp"

                    android:paddingBottom="3dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:hint="Money Made"
                        android:id="@+id/etMoneyMade"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_10sdp"
                        android:background="@drawable/blue_circularbutton"
                        android:paddingEnd="@dimen/_30sdp"
                        android:minWidth="150dp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hours worked"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:minWidth="150dp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_12sdp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hours:"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:minWidth="150dp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:layout_marginHorizontal="@dimen/_3sdp"

                    android:paddingBottom="3dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:hint="Hours"
                        android:textStyle="bold"
                        android:id="@+id/etHoursWorked"
                        android:paddingStart="@dimen/_10sdp"
                        android:background="@drawable/blue_circularbutton"
                        android:paddingEnd="@dimen/_30sdp"
                        android:minWidth="150dp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minutes:"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:minWidth="150dp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:layout_marginHorizontal="@dimen/_3sdp"

                    android:paddingBottom="3dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:hint="Minutes"
                        android:textStyle="bold"
                        android:id="@+id/etMinutesWorked"
                        android:paddingStart="@dimen/_10sdp"
                        android:background="@drawable/blue_circularbutton"
                        android:paddingEnd="@dimen/_30sdp"
                        android:minWidth="150dp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveTodayBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_5sdp"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"

                    android:textAllCaps="false"
                    android:background="@drawable/btn_3"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Week"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:minWidth="150dp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_16sdp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Weekly Balance:"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:minWidth="150dp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_3sdp"

                        android:paddingBottom="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:hint="560"
                            android:textStyle="bold"
                            android:id="@+id/TotalWeeklyBalance"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@drawable/blue_circularbutton"
                            android:paddingEnd="@dimen/_30sdp"
                            android:minWidth="150dp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Weekly Hours:"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:minWidth="150dp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_3sdp"

                        android:paddingBottom="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:hint="5.75"
                            android:textStyle="bold"
                            android:id="@+id/TotalWeeklyHours"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@drawable/blue_circularbutton"
                            android:paddingEnd="@dimen/_30sdp"
                            android:minWidth="150dp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Month"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:minWidth="150dp"
                    android:paddingTop="@dimen/_10sdp"
                    android:textColor="#000"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total Wins:"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:minWidth="150dp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_3sdp"

                        android:paddingBottom="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:hint="Wins"
                            android:textStyle="bold"
                            android:id="@+id/TotalWin"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@drawable/blue_circularbutton"
                            android:paddingEnd="@dimen/_30sdp"
                            android:minWidth="150dp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total Loss:"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:minWidth="150dp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_3sdp"

                        android:paddingBottom="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:hint="Loss"
                            android:id="@+id/TotalLoss"
                            android:textStyle="bold"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@drawable/blue_circularbutton"
                            android:paddingEnd="@dimen/_30sdp"
                            android:minWidth="150dp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Win/loss ratio:"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:minWidth="150dp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_3sdp"

                        android:paddingBottom="3dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:hint="Ratio"
                            android:id="@+id/winLossRatio"
                            android:textStyle="bold"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@drawable/blue_circularbutton"
                            android:paddingEnd="@dimen/_30sdp"
                            android:minWidth="150dp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Monthly Balance:"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:minWidth="150dp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_3sdp"

                        android:paddingBottom="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:hint="Balance"
                            android:id="@+id/etMonthlyMoney"

                            android:textStyle="bold"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@drawable/blue_circularbutton"
                            android:paddingEnd="@dimen/_30sdp"
                            android:minWidth="150dp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Monthly Hours:"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:minWidth="150dp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_3sdp"

                        android:paddingBottom="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:hint="Monthly Hours"
                            android:id="@+id/etMonthlyHours"
                            android:textStyle="bold"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@drawable/blue_circularbutton"
                            android:paddingEnd="@dimen/_30sdp"
                            android:minWidth="150dp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Year Total : "
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:minWidth="150dp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_3sdp"

                        android:paddingBottom="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="7089$/ 700 Hr"
                            android:textStyle="bold"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@drawable/blue_circularbutton"
                            android:paddingEnd="@dimen/_30sdp"
                            android:minWidth="150dp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Year Win %:"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:minWidth="150dp"
                        android:textColor="#000"
                        android:textSize="@dimen/_12sdp" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="@dimen/_3sdp"

                        android:paddingBottom="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:hint="Yearly Win"
                            android:textStyle="bold"
                            android:paddingStart="@dimen/_10sdp"
                            android:background="@drawable/blue_circularbutton"
                            android:paddingEnd="@dimen/_30sdp"
                            android:minWidth="150dp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </RelativeLayout>


                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/notesBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_5sdp"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"

                    android:textAllCaps="false"
                    android:background="@drawable/btn_3"
                    android:text="Notes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    />
            </LinearLayout>

        </ScrollView>





    </LinearLayout>






</RelativeLayout>